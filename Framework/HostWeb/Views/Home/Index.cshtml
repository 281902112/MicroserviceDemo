@using Microsoft.AspNetCore.Authentication
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1 align="center">This is a Microservice Demo.</h1>
    @if (!User.Identity.IsAuthenticated)
    {
        <h3>Error! User Is not Authenticated.</h3>
    }

    <h2>Claims</h2>
    <dl>
        @foreach (var claim in User.Claims)
        {
            <dt>@claim.Type</dt>
            <dd>@claim.Value</dd>
        }
    </dl>
    <a href="/Home/Logout">Logout</a>
    <br /> <br /> <br />
                  <a href="/Home/CallTestApi">GetUserClaims</a>
    <br />
    "Authorization: Bearer @ViewBag.AccessToken"
    <br />
    <div>

        <dl>
            @foreach (var item in ViewBag.CallTestApiResult)
            {
                <dt>@item.Key</dt>
                <dd>@item.Value</dd>
            }
        </dl>
    </div>

</body>
</html>
